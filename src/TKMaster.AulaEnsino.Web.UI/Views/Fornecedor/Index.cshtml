@{
    ViewData["Title"] = "Listagem de Fornecedor";
}

<style>
    body .obrigatorio {
        color: red !important;
    }

    th.dt-center, td.dt-center {
        text-align: center;
    }
</style>

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">@ViewData["Title"]</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="breadcrumb-item">Cadastro</li>
                    <li class="breadcrumb-item active">Fornecedor</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<section class="content">
    <div class="container-fluid">
        <!-- Filter -->
        <form id="formFornecedorFiltro" action="" method="post">
            <div class="card card-default">
                <div class="card-header alert alert-primary">
                    <h3 class="card-title"><i class="fa fa-fw fa-filter"></i>Filtros</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Nome</label>
                                <input type="text" id="iptNome" placeholder="Nome Fornecedor" class="form-control" style="width: 100% !important;" />
                            </div>
                            <!-- /.form-group -->
                        </div>
                        <!-- /.col -->
                        <div class="col-md-4">
                            <div class="form-group">
                                <label style="font-weight: bold;">CPF / CNPJ</label>
                                <input type="text" id="iptDocumento" placeholder="CPF / CNPJ" class="form-control" style="width: 100% !important;" />
                                <!-- /.form-group -->
                            </div>
                            <!-- /.col -->
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label style="font-weight: bold;">Tipo Pessoa</label>
                                <select class="form-control" style="width: 100% !important;" id="cboTipoPessoa" asp-items="@(new SelectList(ViewBag.TipoPessoa, "Key", "Value"))">
                                    <option value=""> -- Selecione -- </option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label style="font-weight: bold;">Status</label>
                                <select class="form-control" style="width: 100% !important;" id="cboSituacaoStatus" asp-items="@(new SelectList(ViewBag.SituacaoStatus, "Key", "Value"))">
                                    <option value=""> -- Selecione -- </option>
                                </select>
                            </div>
                            <!-- /.form-group -->
                        </div>
                        <!-- /.row -->
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <div class="row pull-right">
                        <div>
                            <label>&nbsp;</label>
                            <div class="btn-pesquisar">
                                <button type="button" class="btn btn-primary fonteBtn" id="btnPesquisar" onclick="fnFiltrarConteudo()">Pesquisar</button>
                            </div>
                        </div>
                        <div>&nbsp;</div>
                        <div>
                            <label>&nbsp;</label>
                            <div class="btn-pesquisar">
                                <button type="button" class="btn btn-warning btn-secund fonteBtn" id="btnLimparCampos" onclick="fnLimparCampos()">Limpar</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </form>
        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header alert alert-primary">
                <i class="fa fa-fw fa-bars"></i>
                Lista
                <button class="btn btn-success btn-sm float-right"
                        id="btnCreateFornecedor" style="color:white">
                    <i class="fa fa-fw fa-plus" data-toggle="tooltip" title="Incluir"></i>
                </button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="dtFornecedor" style="width:100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    Nome
                                </th>
                                <th style="width:150px; text-align-last:center;">
                                    CPF / CNPJ
                                </th>
                                <th style="width:150px; text-align-last:center;">
                                    Tipo Pessoa
                                </th>
                                <th style="width:150px; text-align-last:center;">
                                    Status
                                </th>
                                <th style="width:100px; text-align-last:center;">Ações</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Modal -->
<div class="modal fade" id="modalFornecedor" tabindex="-1" role="dialog" aria-labelledby="modalFornecedorTitle" aria-hidden="true">
</div>

<!-- Modal Retorno -->
<div class="modal fade" id="modalRetorno" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div id="headerModal" class="modal-header alert alert-warning">
                <h5 class="modal-title" id="tituloModalRetorno">Sucesso</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mensagemRetorno">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="ModalClose()">Ok</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal confirmação Salvar -->
<div class="modal fade" id="modalConfirmacaoSalvar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header alert-primary">
                <h5 class="modal-title" id="tituloModalConfirmarSalvar">Salvar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Deseja realmente salvar?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="ModalClose(false)">Não</button>
                <button type="button" id="btnSalvarConfirmacao" class="btn btn-primary" onclick="ModalClose(false)">Sim</button>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap modal popup -->
<div class="modal fade" id="modalExcluirFornecedor" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header alert alert-danger">
                <h4 class="modal-title" id="myModalLabel"><i class="fa fa-trash"></i> Exclusão de Fornecedor</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="dvCodigo"></div>
            <div class="modal-body" id="modal-body-Fornecedor">
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-dismiss="modal">Não</button>
                <button class="btn btn-success delete-confirm">Sim</button>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap modal popup -->
<div class="modal fade" id="modalReativarFornecedor" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header alert alert-primary">
                <h4 class="modal-title" id="myModalLabel"><i class="fa fa-refresh fa-spin"></i> Reativação de Fornecedor</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="dvCodigoReativarFornecedor"></div>
            <div class="modal-body" id="modal-body-ReativarFornecedor">
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-dismiss="modal">Não</button>
                <button class="btn btn-success reativar-confirm">Sim</button>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/Views/fornecedor.js?timestamp=@DateTime.Now.Ticks.ToString()" asp-append-version="true"></script>
    }